@using BassRigCurator.ViewModels;
@model SurveyViewModel;

<div class="text-center">
    <h1 class="display-4">Answer these questions to get your custom rig</h1>
    <div class="text-lg-left">
        <form asp-controller="Survey" asp-action="HandleSurveyForm" method="post">
            <h2>Bass Guitar questions</h2>

            <label asp-for="BassBudget">What is your budget for a bass?</label>
            <input asp-for="BassBudget" placeholder="$"/><br/>

            <label asp-for="Genre">What genre do you like to play?</label>
            <select asp-for="Genre" asp-items="Model.GenreTypes"></select><br/>

            <h2>Amplifier questions</h2>

            <label asp-for="AmpBudget">What is your budget for an amplifier?</label>
            <input asp-for="AmpBudget" placeholder="$"/><br/>

            <label asp-for="Volume">How loud are you able to play?</label>
            <select asp-for="Volume" asp-items="Model.VolumeLevels"></select><br/>

            <input type="submit" value="See your custom rig!"/>
        </form>
    </div>
</div>
